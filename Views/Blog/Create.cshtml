@model MyPersonelBlog.Models.BlogPost

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog Oluştur</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <style>
        body {
            margin: 0px;
            background-color: #e7fafc;
        }
        h1 {
            text-align: center;
        }
        form {
            width: 90%;
            margin: auto;
        }
        label {
            display: block;
            margin: 10px 0px;
        }
        input, textarea {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
        }
        textarea {
            height: 200px;
        }
        button:hover {
            background-color: #1fb4c2;
        }
    </style>
</head>
<body>
    <h1>Blog Oluştur</h1>
    <form asp-action="Create" method="post">
        <label asp-for="Title" class="control-label">Title:</label>
        <input asp-for="Title" class="form-control" placeholder="Title"/>
        <span asp-validation-for="Title" class="text-danger"></span>
        <br>
        <label asp-for="ImageUrl" class="control-label">Resim URL:</label>
        <input asp-for="ImageUrl" class="form-control" placeholder="Resim URL"/>
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
        <br>
        <label asp-for="Author" class="control-label">Yazan:</label>
        <input asp-for="Author" class="form-control" placeholder="Yazan"/>
        <span asp-validation-for="Author" class="text-danger"></span>
        <br>
        <label asp-for="Content" class="control-label">İçerik:</label>
        <textarea asp-for="Content" class="form-control"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
        <br>
        <button type="submit" style="border-radius: 12%;padding: 12px 28px;border: 1px solid #ccc;background-color: #ddd;font-weight: bold;font-size: small;background-color: #0696A2;color: white;display: block;margin: 10px auto;">Blog Oluştur</button>
    </form>
</body>
</html>
